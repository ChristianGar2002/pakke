<odoo>
    <data>
        <record id="sale_order_inherit_shipments" model="ir.ui.view">
            <field name="name">sale.order_inherit_shipments</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='customer_signature']" position="after">
                    
                    <!-- Para datos de envios y cotizacion-->
                    <page string="Datos de envio" name="shipments_data">

                        <notebook>
                            <page string="Datos generales" name="general_data">
                                <group>
                                    <field name="courier_code"/>
                                    <field name="courier_service_id"/>
                                    <field name="reseller_reference"/>
                                    <field name="content"/>
                                    <field name="coupon_code"/>
                                    <field name="insured_amount"/>
                                </group>
                            </page>
                            <page string="Dirección de envio" name="address_from">
                                <group>
                                    <field name="address_from_zipcode"/>
                                    <field name="address_from_state"/>
                                    <field name="address_from_city"/>
                                    <field name="address_from_neighborhood"/>
                                    <field name="address_from_address1"/>
                                    <field name="address_from_address2"/>
                                    <field name="address_from_residential"/>
                                </group>
                            </page>
                            <page string="Dirección de entrega" name="address_to">
                                <group>
                                    <field name="address_to_zipcode"/>
                                    <field name="address_to_state"/>
                                    <field name="address_to_city"/>
                                    <field name="address_to_neighborhood"/>
                                    <field name="address_to_address1"/>
                                    <field name="address_to_address2"/>
                                    <field name="address_to_residential"/>
                                </group>
                            </page>
                            <page string="Información del paquete" name="parcel">
                                <group>
                                    <field name="parcel_length"/>
                                    <field name="parcel_width"/>
                                    <field name="parcel_height"/>
                                    <field name="parcel_weight"/>
                                </group>
                            </page>
                            <page string="Información del remitente" name="sender">
                                <group>
                                    <field name="sender_name"/>
                                    <field name="sender_phone1"/>
                                    <field name="sender_phone2"/>
                                    <field name="sender_phone3"/>
                                    <field name="sender_email"/>
                                </group>
                            </page>
                            <page string="Información del destinatario" name="recipient">
                                <group>
                                    <field name="recipient_name"/>
                                    <field name="recipient_company_name"/>
                                    <field name="recipient_phone1"/>
                                    <field name="recipient_email"/>
                                </group>
                            </page>
                        </notebook>

                        <div class="text-end">
                            <button name="quote" type="object" string="Cotizar" class="oe_highlight mt-2 btn-lg"></button>
                        </div>

                    </page>
                    
                    <!-- Para cotizar-->
                    <page string="Cotizar" name="quote">
                        <group name="selection_couriers">
                            <group string="Mensajeros de Pakke">

                                <field name="id_couriers_selection" string="Mensajero seleccionado"/>
                            
                            </group>
                        </group>
                            <field name="id_couriers_table" widget="one2many" nolabel="1" string="Tabla de cotización"><!--Para abarque el 100% del ancho, y esto es para el One2many y se muestren los campos que se desean-->
                                <tree string="Courier" decoration-warning="record_selection == True" decoration-bf="record_selection == True" editable="bottom" delete="false">
                                    <button name="couriers_selection" string="Seleccionar" type="object" class="oe_highlight btn"/>
                                    <field name="courier_code"/>
                                    <field name="name"/>
                                    <field name="courier_service_id"/>
                                    <field name="delivery_days"/>
                                    <field name="estimated_delivery_date"/>
                                    <field name="total_price"/>
                                    <field name="record_selection" invisible="1" string="" class="d-none"/>
                                </tree>
                            </field>
                            <field name="name_orders" invisible="1"/>
                            <group name="couriers_enviopack">
                                <group string="Mensajeros de Enviopack" name="couriers_fields_enviopack">
    
                                    <!-- <field name="id_couriers_selection" string="Selecciona un mensajero"/> -->
                                
                                </group>
                            </group>
                        <div class="text-end">
                            <button name="pdf_shipping_guide" type="object" string="Generar Guia" class="oe_highlight mt-2 btn-lg"></button>
                        </div>
                        
                    </page>

                    <!-- Prueba pdf-->
                    <page string="PDF" name="pdf">
                            <field name="test_table_pdf" widget="one2many" nolabel="1" string="Tabla de pruebas"><!--Para abarque el 100% del ancho, y esto es para el One2many y se muestren los campos que se desean-->
                                <tree string="Test">
                                    <field name="test_pdf" filename="file_name" widget="binary"/>
                                    <field name="file_name" invisible="1" string=" "/>
                                </tree>
                            </field>
                    </page>
                    
                </xpath>
            </field>
        </record>
    </data>
</odoo>
  