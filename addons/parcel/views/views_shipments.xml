<odoo>
    <data>
        <record id="sale_order_inherit_shipments" model="ir.ui.view">
            <field name="name">sale.order_inherit_shipments</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='customer_signature']" position="after">

                    <page string="Datos de envio" name="shipments_data">

                        <notebook>
                            <page string="Datos generales" name="general_data">
                                <group>
                                    <field name="CourierCode"/>
                                    <field name="CourierServiceId"/>
                                    <field name="ResellerReference"/>
                                    <field name="CouponCode"/>
                                    <field name="InsuredAmount"/>
                                </group>
                            </page>
                            <page string="Dirección de envio" name="address_from">
                                <group>
                                    <field name="AddressFrom_ZipCode"/>
                                    <field name="AddressFrom_State"/>
                                    <field name="AddressFrom_City"/>
                                    <field name="AddressFrom_Neighborhood"/>
                                    <field name="AddressFrom_Address1"/>
                                    <field name="AddressFrom_Address2"/>
                                    <field name="AddressFrom_Residential"/>
                                </group>
                            </page>
                            <page string="Dirección de entrega" name="address_to">
                                <group>
                                    <field name="AddressTo_ZipCode"/>
                                    <field name="AddressTo_State"/>
                                    <field name="AddressTo_City"/>
                                    <field name="AddressTo_Neighborhood"/>
                                    <field name="AddressTo_Address1"/>
                                    <field name="AddressTo_Address2"/>
                                    <field name="AddressTo_Residential"/>
                                </group>
                            </page>
                            <page string="Información del paquete" name="parcel">
                                <group>
                                    <field name="Parcel_Length"/>
                                    <field name="Parcel_Width"/>
                                    <field name="Parcel_Height"/>
                                    <field name="Parcel_Weight"/>
                                </group>
                            </page>
                            <page string="Información del remitente" name="sender">
                                <group>
                                    <field name="Sender_Weight"/>
                                    <field name="Sender_Phone1"/>
                                    <field name="Sender_Phone2"/>
                                    <field name="Sender_Phone3"/>
                                    <field name="Sender_Email"/>
                                </group>
                            </page>
                            <page string="Información del destinatario" name="recipient">
                                <group>
                                    <field name="Recipient_Name"/>
                                    <field name="Recipient_CompanyName"/>
                                    <field name="Recipient_Phone1"/>
                                    <field name="Recipient_Email"/>
                                </group>
                            </page>
                        </notebook>

                        <div class="text-end">
                            <button name="quote" type="object" string="Cotizar" class="oe_highlight mt-2 btn-lg"></button>
                        </div>

                    </page>
                    
                </xpath>
            </field>
        </record>
    </data>
</odoo>
  